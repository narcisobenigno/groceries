{
  "name": "@groceries/app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/app/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "command": "biome lint apps/app/src --write"
    },
    "format": {
      "command": "biome format apps/app/src --write"
    },
    "check": {
      "command": "biome check apps/app/src"
    },
    "ci": {
      "command": "biome ci apps/app/src"
    },
    "test": {
      "command": "eval \"$(cat .env)\" && NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest --testPathPattern=apps/app"
    },
    "build": {
      "command": "tsc -p apps/app/tsconfig.json && vite build -c apps/app/vite.config.ts",
      "dependsOn": ["@groceries/event-sourcing:build", "@groceries/domain-events:build"],
      "outputs": ["{workspaceRoot}/dist/apps/app"]
    },
    "dev": {
      "command": "cd apps/app && pnpm dev"
    },
    "start": {
      "command": "cd apps/app && pnpm start"
    }
  }
}

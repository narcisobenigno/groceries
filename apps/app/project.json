{
  "name": "@groceries/app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/app/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "command": "biome lint apps/app/src --write"
    },
    "format": {
      "command": "biome format apps/app/src --write"
    },
    "check": {
      "command": "biome check apps/app/src"
    },
    "ci": {
      "command": "biome ci apps/app/src"
    },
    "test": {
      "command": "eval \"$(cat .env)\" && cd apps/app && node --import tsx --test 'src/**/*.spec.ts'"
    },
    "build": {
      "command": "tsc -p apps/app/tsconfig.json && esbuild apps/app/src/client/js/app.ts --bundle --outdir=apps/app/src/public/js --format=esm --sourcemap",
      "dependsOn": ["@groceries/event-sourcing:build", "@groceries/domain-events:build"],
      "outputs": ["{workspaceRoot}/dist/apps/app"]
    },
    "dev": {
      "command": "cd apps/app && pnpm dev"
    },
    "start": {
      "command": "cd apps/app && pnpm start"
    }
  }
}

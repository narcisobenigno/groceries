{
  "name": "@groceries/app",
  "version": "1.0.0",
  "description": "Groceries web application",
  "type": "module",
  "main": "src/index.ts",
  "scripts": {
    "dev": "cd src && tsx watch index.ts",
    "build": "tsc --build && esbuild src/client/js/app.ts --bundle --outdir=src/public/js --format=esm --sourcemap",
    "start": "NODE_ENV=production node ../../dist/apps/app/index.js",
    "test": "node --import tsx --test 'src/**/*.spec.ts'",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "deploy": "cd ../.. && fly deploy --remote-only",
    "deploy:launch": "cd ../.. && fly launch",
    "logs": "cd ../.. && fly logs",
    "ssh": "cd ../.. && fly ssh console"
  },
  "dependencies": {
    "@groceries/domain-events": "workspace:*",
    "@groceries/event-sourcing": "workspace:*",
    "ejs": "^3.1.10",
    "express": "^5.1.0",
    "express-ejs-layouts": "^2.5.1",
    "helmet": "^8.1.0",
    "htmx.org": "^2.0.4",
    "morgan": "^1.10.0",
    "postgres": "catalog:postgres",
    "ulid": "catalog:ulid",
    "zod": "catalog:zod"
  },
  "devDependencies": {
    "@types/ejs": "^3.1.5",
    "@types/express": "^5.0.3",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/morgan": "^1.9.10",
    "@types/node": "catalog:building",
    "esbuild": "^0.25.0",
    "tsx": "^4.19.4",
    "typescript": "catalog:building"
  }
}

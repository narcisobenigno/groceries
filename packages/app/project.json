{
  "name": "@groceries/app",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/app/src",
  "projectType": "application",
  "targets": {
    "lint": {
      "command": "biome lint packages/app/src --write"
    },
    "format": {
      "command": "biome format packages/app/src --write"
    },
    "check": {
      "command": "biome check packages/app/src"
    },
    "ci": {
      "command": "biome ci packages/app/src"
    },
    "test": {
      "command": "eval \"$(cat .env)\" && NODE_OPTIONS=--experimental-vm-modules NODE_NO_WARNINGS=1 jest --testPathPattern=packages/app"
    },
    "build": {
      "command": "tsc -p packages/app/tsconfig.json && vite build -c packages/app/vite.config.ts",
      "dependsOn": ["@groceries/event-sourcing:build", "@groceries/domain-events:build"],
      "outputs": ["{workspaceRoot}/dist/packages/app"]
    },
    "dev": {
      "command": "cd packages/app && pnpm dev"
    },
    "start": {
      "command": "cd packages/app && pnpm start"
    }
  }
}

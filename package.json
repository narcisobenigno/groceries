{
  "name": "groceries-monorepo",
  "version": "1.0.0",
  "description": "Groceries application monorepo",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "oss/*",
      "packages/*",
      "apps/*"
    ],
    "catalogs": {
      "postgres": {
        "postgres": "^3.4.7"
      },
      "ulid": {
        "ulid": "^3.0.0"
      },
      "zod": {
        "zod": "^3.25.56"
      },
      "building": {
        "@biomejs/biome": "^1.9.4",
        "@types/node": "^22.15.30",
        "husky": "^9.1.7",
        "nx": "^22.0.3",
        "typescript": "^5.8.3"
      }
    }
  },
  "scripts": {
    "build": "nx run-many -t build",
    "lint": "nx run-many -t lint",
    "format": "nx run-many -t format",
    "check": "nx run-many -t check",
    "ci": "nx run-many -t ci",
    "test": "nx run-many -t test",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "bun@latest",
  "devDependencies": {
    "@biomejs/biome": "catalog:building",
    "@types/node": "catalog:building",
    "husky": "catalog:building",
    "nx": "catalog:building",
    "typescript": "catalog:building"
  }
